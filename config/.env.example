# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=false

# Authentication
API_KEYS=your-api-key-1,your-api-key-2,your-api-key-3

# Claude Agent SDK
ANTHROPIC_API_KEY=sk-ant-your-key-here
# CLAUDE_MODEL options:
#   - claude-3-5-haiku-20241022 (RECOMMENDED: fast 37s, quality analysis, 87% cheaper)
#   - claude-sonnet-4-5-20250929 (slower 123s, highest quality, more expensive)
#   - claude-opus-4-20250514 (slowest, best quality, most expensive)
CLAUDE_MODEL=claude-3-5-haiku-20241022
CLAUDE_MAX_TOKENS=8192

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=pdf

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_DELAYS=1,2,4
RETRY_MAX_TOTAL_SECONDS=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_PII_REDACTION=true

# Performance
ANALYSIS_TIMEOUT_SECONDS=30
CONCURRENT_REQUESTS_LIMIT=10
